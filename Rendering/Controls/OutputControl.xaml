<UserControl x:Class="Rendering.Controls.OutputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rendering.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
        <TextBox Name="Output" Background="Transparent" Foreground="White" FontSize="14" FontFamily="Consolas" IsReadOnly="True"/>
    </ScrollViewer>
</UserControl>
